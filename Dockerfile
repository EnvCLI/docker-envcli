############################################################
# Dockerfile
############################################################

# Set the base image
FROM docker:18.06

############################################################
# Configuration
############################################################
ENV VERSION "0.2.3"

############################################################
# Installation
############################################################

RUN apk add --no-cache curl bash &&\
    curl -L -o /usr/local/bin/envcli https://dl.bintray.com/envcli/golang/envcli/v${VERSION}/envcli_linux_amd64 &&\
    chmod +x /usr/local/bin/envcli &&\
	apk del curl

############################################################
# Execution
############################################################
CMD [ "envcli", "--help"]
